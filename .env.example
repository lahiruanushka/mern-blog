# Server Port
PORT=8000

# MongoDB connection string
MONGO_URI=your_mongodb_connection_string_here

# JWT secrets for authentication
JWT_SECRET=your_jwt_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# Email configuration (for sending emails like verification, password reset)
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password_here

# Frontend URL (used for CORS and redirecting)
FRONTEND_URL=http://localhost:5173

# Google reCAPTCHA keys (if you use captcha for forms)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here
RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# Session secret (if using express-session)
SESSION_SECRET=your_session_secret_here

# Environment (development or production)
NODE_ENV=development
